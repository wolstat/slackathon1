{
  "name": "TSM DP Slack viewer",
  "description": "This extension will alert you to new messages in Slack",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["alarms", "tabs", "bookmarks", "declarativeWebRequest", "*://*/*"],
  "background": {
    "scripts": ["js/jquery-2.1.3.min.js", "js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {   
      "19": "img/icon19.png", 
      "38": "img/icon38.png"
    },
    "default_popup": "index.html",
    "default_title": "Slack Ext"
  },
  "commands": {
    "open-google": {
      "description": "Open a tab to google.com",
      "suggested_key": { "default": "Ctrl+Shift+L" }
    },
    "_execute_browser_action": {
      "suggested_key": { "default": "Ctrl+Shift+K" }
    }
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}

